<head>
    <style>
        body {
            margin: 0;
        }

        .links line {
            color: white;
        }

        .my-modal {
            display: none;
            position: fixed;
            width: 100%;
            height: 100%;
            left: 0;
            top: 0;
            overflow-y: initial;
            z-index: 1;
            background-color: rgb(0, 0, 0, 0.4);
        }

        .my-modal-content {
            /* background-color: rgb(254, 254, 254, 0.9); */
            background-color: rgba(20, 20, 20, 0.9);
            color: white;
            margin: 10% auto;
            padding: 32px 20px;
            border: 1px solid black;
            width: 50%;
            /* max-width: 350px;
            min-width: 350px; */
            align-items: center;
            position: relative;
            border-radius: 10px;
            height: 50vh;
            overflow-y: auto;
        }

        .my-modal-content::-webkit-scrollbar {
            width: 12px;
            /* width of the entire scrollbar */
        }

        .my-modal-content::-webkit-scrollbar {
            background: rgb(0, 0, 0, 0.4);
            /* color of the tracking area */
        }

        .my-modal-content::-webkit-scrollbar-thumb {
            background-color: #28c49e;
            /* color of the scroll thumb */
            border-radius: 45px;
            /* roundness of the scroll thumb */
            border: 1px solid #28c49e;
            /* creates padding around scroll thumb */
        }

        .card-title {
            text-transform: uppercase;
            text-align: center;
            color: #28c49e;
            font-weight: 800;
            font-size: 21px;
        }

        .job {
            display: block;
            margin: auto;
            padding: 0;
            width: 55%;
        }
    </style>

    <script src="//unpkg.com/3d-force-graph"></script>
    <script src="//unpkg.com/three"></script>
    <script src="//unpkg.com/three-spritetext"></script>

    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
        crossorigin="anonymous"></script>
    <!--<script src="../../dist/3d-force-graph.js"></script>-->
</head>

<body>
    <div id="3d-graph"></div>

    <div id="myModal" class="my-modal">
        <div class="my-modal-content">
            <div id="modalContent"></div>

        </div>
    </div>
    </div>


    <script>
        const elem = document.getElementById('3d-graph');
        const Graph = ForceGraph3D()
            (elem)
            .jsonUrl('data')
            .nodeThreeObject(node => {
                const sprite = new SpriteText(node.id);
                sprite.material.depthWrite = false; // make sprite background transparent
                sprite.color = node.color;
                sprite.textHeight = node.value;
                return sprite;
            })
            .nodeAutoColorBy('group')
            .linkOpacity(0.5)
            .onNodeClick(node => {
                // Aim at node from outside it
                const myModal = document.getElementById("myModal");
                const modalContent = document.getElementById("modalContent");
                if (node.info) {
                    if (myModal.style.display == "none" || myModal.style.display == '') {
                        myModal.style.display = "block";
                        modalContent.innerHTML = `
                        <img class="job" src="/images/full-stack.png">
                        <h4 class="card-title">${node.id}</h4>
                        <p class="card-text">${node.info}</p>
                        <h4 class="card-title">MISSIONS</h4>
                        <p class="card-text">${node.missions}</p>
                        <h4 class="card-title">SKILLS</h4>
                        <p class="card-text">${node.skills}</p>
                        <h4 class="card-title">SALARY</h4>
                        <p class="card-text">${node.salary}</p>
                        `
                    } else {
                        myModal.style.display = "none";
                    }
                }

                const distance = 40;
                const distRatio = 10000000000000000 + distance / Math.hypot(node.x, node.y, node.z);

                Graph.cameraPosition({
                    x: node.x / distRatio,
                    y: node.y / distRatio,
                    z: node.z / distRatio
                }, // new position
                    node, // lookAt ({ x, y, z })
                    3000, // ms transition duration
                );
            });

        window.addEventListener('click', function (event) {
            if (event.target == myModal) {
                myModal.style.display = "none";
            }
        })
    </script>
</body>
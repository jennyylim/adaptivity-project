<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs')%>

    <body>
        <div class="container login">
            <div class="row">
                <div class="col-lg mx-auto">
                    <form action="/users/register" method="POST" class="form-signin">
                        <a href="/"><img class="logo login" src="/images/logo - white.png"></a>

                        <h3 class="h3 mb-3 font-weight-normal">Sign Up</h3>

                        <%- include('./partials/message.ejs')%>

                            <label for="name" class="sr-only">Name</label>
                            <input type="name" id="name" name="name" class="form-control" placeholder="Name"
                                value="<% typeof name != 'undefined' ? name : '' %>" required autofocus>
                            <br>

                            <label for="email" class="sr-only">Email address</label>
                            <input type="email" id="email" name="email" class="form-control" placeholder="Email"
                                value="<% typeof email != 'undefined' ? email : '' %>" required>
                            <br>

                            <label for="password" class="sr-only">Password</label>
                            <input type="password" id="password" name="password" class="form-control"
                                placeholder="Password" value="<% typeof password != 'undefined' ? password : '' %>"
                                required>
                            <br>

                            <button class="cta_button login" type="submit">Register</button>
                    </form>
                    <p class="mt-3">Have an account? <a class="register" href="/users/login">Login</a>
                </div>
            </div>
        </div>
    </body>

</html>